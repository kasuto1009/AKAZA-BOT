# ===============================================
# CONFIGURACIÓN DEL BOT .ENV- VERSIÓN BAILEYS
# ===============================================

# --- Configuración General del Bot ---
PREFIX=!
# ¡IMPORTANTE! El número del dueño ahora debe tener el formato de Baileys
OWNER_NUMBER=
BOT_NAME=Akaza_bot
REQUIRE_REGISTRATION=true

# ===============================================
# METADATOS Y APIs EXTERNAS
# ===============================================
# Estos se usan para los stickers y otras funciones
PACKNAME=Akaza Bot
AUTHOR=v2.0.0

# APIs (se mantienen igual)
GOOGLE_API_KEY=
LOLHUMAN_API_KEY=kazuto

# ===============================================
# BASE DE DATOS Y LÍMITES
# ===============================================
# Corregido para apuntar al archivo de la base de datos, no al script.
DATABASE_URL=./data/bot.db
DEFAULT_LIMIT=20
PREMIUM_LIMIT=100

# Cooldowns (se mantienen igual)
CLAIM_COOLDOWN=1440
COMMAND_COOLDOWN=5

# Logging (se mantienen igual)
LOG_LEVEL=info
DEBUG=false
